<Window x:Class="ImageRecognitionApp.Assets.UI.SystemInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ImageRecognitionApp.Assets.UI"
        Title="系统信息"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Foreground="White"
        ShowInTaskbar="False"
        AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0,10,0,0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 折叠面板样式 -->
        <Style x:Key="InfoExpanderStyle" TargetType="Expander">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Margin" Value="0,0,0,14"/>
                <Setter Property="BorderBrush" Value="#3E3E42"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Expander">
                            <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <DockPanel>
                                    <ToggleButton x:Name="HeaderSite" Content="{TemplateBinding Header}" DockPanel.Dock="Top"
                                                  IsChecked="{Binding Path=IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Padding="0"
                                                  HorizontalContentAlignment="Left"
                                                  Foreground="{TemplateBinding Foreground}" FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                    <Grid x:Name="IconContainer" Margin="10,0,0,0" Width="16" Height="16" HorizontalAlignment="Left">
                                                        <!-- 箭头图标 -->
                                                        <Image x:Name="ArrowIcon" Width="16" Height="16" RenderTransformOrigin="0.5, 0.5">
                                                            <Image.RenderTransform>
                                                                <RotateTransform Angle="0"/>
                                                            </Image.RenderTransform>
                                                        </Image>
                                                    </Grid>
                                                </StackPanel>
                                                <ControlTemplate.Resources>
                                                    <Storyboard x:Key="ExpandAnimation">
                                                        <DoubleAnimation Storyboard.TargetName="ArrowIcon" Storyboard.TargetProperty="RenderTransform.Angle" From="0" To="180" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                    <Storyboard x:Key="CollapseAnimation">
                                                        <DoubleAnimation Storyboard.TargetName="ArrowIcon" Storyboard.TargetProperty="RenderTransform.Angle" From="180" To="0" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </ControlTemplate.Resources>
                                                <ControlTemplate.Triggers>
                                                    <!-- 动画触发器 -->
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard Storyboard="{StaticResource ExpandAnimation}"/>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard Storyboard="{StaticResource CollapseAnimation}"/>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="ExpandSite" Visibility="Collapsed" DockPanel.Dock="Bottom" HorizontalAlignment="Left"/>
                                </DockPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsExpanded" Value="True">
                                    <Setter Property="Visibility" TargetName="ExpandSite" Value="Visible"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        
        <!-- 信息项样式 -->
        <Style x:Key="InfoItemStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        
        <!-- 信息标签样式 -->
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="16,2,0,2"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>
        
        <!-- 信息值样式 - TextBlock -->
        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="16,2,0,2"/>
            <Setter Property="Foreground" Value="#737780"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- 信息值容器样式 - StackPanel -->
        <Style x:Key="InfoContainerStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="16,2,0,2"/>
        </Style>
        
        <Style x:Key="ScrollBarButtonStyle" TargetType="RepeatButton">
            <Setter Property="Height" Value="0"/>
            <Setter Property="Width" Value="0"/>
            <Setter Property="Opacity" Value="0"/>
        </Style>
        
        <!-- 现代化滚动条样式 -->
        <Style TargetType="ScrollBar">
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent" Width="8" Margin="0,0,2,0">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsMouseOver}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Style="{StaticResource ScrollBarButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=ScrollBar}}"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Style="{StaticResource ScrollBarButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Foreground" Value="#A0A0A0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#4DFFFFFF" BorderThickness="1">
            <Grid>
                <!-- 标题栏 - 只包含关闭按钮 -->
                <Border Height="40" VerticalAlignment="Top" Background="#252526" CornerRadius="8,8,0,0">
                    <Button x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click" HorizontalAlignment="Right">
                        <TextBlock Text="×" FontSize="16"/>
                    </Button>
                </Border>
                
                <!-- 内容区域 -->
                <Grid Margin="0,40,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden" Background="Transparent" Padding="16" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Vertical" Width="Auto" Height="Auto" Margin="0,0,0,10">
                            <!-- 系统信息折叠面板 -->
                            <Expander x:Name="SystemInfoExpander" Style="{StaticResource InfoExpanderStyle}" IsExpanded="True">
                                <StackPanel>
                                    <!-- Windows版本 -->
                                    <Grid Style="{StaticResource InfoItemStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="WinVersionLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock x:Name="WinVersionValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                                    </Grid>
                                    
                                    <!-- Windows版本号 -->
                                    <Grid Style="{StaticResource InfoItemStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="WinBuildLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock x:Name="WinBuildValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                                    </Grid>
                                    
                                    <!-- 操作系统版本 -->
                                    <Grid Style="{StaticResource InfoItemStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="OSVersionLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock x:Name="OSVersionValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                                    </Grid>
                                    
                                    <!-- 设备名称 -->
                                    <Grid Style="{StaticResource InfoItemStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="DeviceNameLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock x:Name="DeviceNameValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                                    </Grid>
                                    
                                    <!-- 系统架构 -->
                                    <Grid Style="{StaticResource InfoItemStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="ArchitectureLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock x:Name="ArchitectureValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                                    </Grid>
                                    
                                    <!-- 设备ID -->
                                    <Grid Style="{StaticResource InfoItemStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="DeviceIDLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock x:Name="DeviceIDValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                                    </Grid>
                                    
                                    <!-- 产品ID -->
                                    <Grid Style="{StaticResource InfoItemStyle}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="ProductIDLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                        <TextBlock x:Name="ProductIDValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>
                            
                            <!-- 设备信息折叠面板 -->
                            <Expander x:Name="DeviceInfoExpander" Style="{StaticResource InfoExpanderStyle}" IsExpanded="True">
                                <StackPanel>
                                    <!-- 型号 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ModelLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="ModelValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 中央处理器 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="CpuLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="CpuValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 主板 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="MotherboardLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="MotherboardValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 内存 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="MemoryLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="MemoryValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 图形处理器 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="GpuLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="GpuValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 磁盘 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="DiskLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="DiskValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 声卡 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="AudioCardLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="AudioCardValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 网卡 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="NetworkCardLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="NetworkCardValue" Grid.Column="1" Style="{StaticResource InfoValueStyle}"/>
                            </Grid>
                            
                            <!-- 显示器 -->
                            <Grid Style="{StaticResource InfoItemStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="MonitorLabel" Grid.Column="0" Style="{StaticResource InfoLabelStyle}"/>
                                <StackPanel x:Name="MonitorValue" Grid.Column="1" Orientation="Vertical" Style="{StaticResource InfoContainerStyle}"/>
                            </Grid>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>