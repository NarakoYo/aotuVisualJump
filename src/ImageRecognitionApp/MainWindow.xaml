<Window x:Class="ImageRecognitionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ImageRecognitionApp"
        xmlns:unit="clr-namespace:ImageRecognitionApp.unit"
        xmlns:converters="clr-namespace:ImageRecognitionApp.Converters"
        Title="{Binding TitleText}" Height="720" Width="1050"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/logo/logo.ico">
    <Window.Resources>
        <converters:SubtractConverter x:Key="SubtractConverter"/>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0,18,0,0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="MinimizeButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#565656"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- 主背景边框 - 实现18px圆角效果 -->
        <Border Background="#3C3C3C" CornerRadius="18">
            <Grid>
                <!-- 毛玻璃背景层 -->
                <Border Background="#3C3C3C" Opacity="0.9" CornerRadius="18">

                </Border>
                <!-- 内容层 -->
                <Grid>
                    <!-- 自定义标题栏 - 置顶 -->
                    <Border Height="50" VerticalAlignment="Top" Panel.ZIndex="1" CornerRadius="0,18,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" HorizontalAlignment="Stretch">
                    <Grid MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                        <!-- 毛玻璃背景层 -->
                        <Border Background="#1E1E1E" Opacity="1" CornerRadius="18,18,0,0">
                        </Border>
                        <!-- 内容层 -->
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0">
                            <Image Source="pack://application:,,,/Resources/logo/logo.ico" Width="46" Height="46" Stretch="UniformToFill" VerticalAlignment="Center" Margin="0,0,2,0">
                                <Image.Clip>
                                    <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,46,46"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock Text="{Binding TitleText}" Foreground="White" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" FontFamily="Microsoft YaHei, SimHei, Arial Unicode MS"/>
                        </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                                <Button Click="MinimizeWindow" Style="{StaticResource MinimizeButtonStyle}" MouseLeftButtonDown="TitleBarButton_MouseLeftButtonDown" Margin="0,0,-1,0">—</Button>
                                <Button Click="CloseWindow" Style="{StaticResource CloseButtonStyle}" MouseLeftButtonDown="TitleBarButton_MouseLeftButtonDown" Margin="0,0,0,0">✕</Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                </Grid>
                <!-- 内容框 - 标题栏下方4px，左右边距4px -->
                <!-- Panel.ZIndex设置为2确保内容框位于标题栏之上但不会遮挡其他关键UI元素 -->
                <Border Margin="4,54,4,4" 
                        BorderThickness="1" 
                        BorderBrush="#FFFFFF" 
                        CornerRadius="10" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" 
                        Panel.ZIndex="2">
                    <!-- 宽度设置为窗口宽度减去8px (左右边距各4px) -->
                    <Border.Width>
                        <MultiBinding Converter="{StaticResource SubtractConverter}">
                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Source="8"/>
                        </MultiBinding>
                    </Border.Width>
                    <!-- 高度设置为窗口高度减去58px (标题栏高度50px + 上下边距各4px) -->
                    <Border.Height>
                        <MultiBinding Converter="{StaticResource SubtractConverter}">
                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Source="58"/>
                        </MultiBinding>
                    </Border.Height>
                    <!-- 内容框内部可以添加其他控件 -->
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
