<Window x:Class="ImageRecognitionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ImageRecognitionApp"
        xmlns:unit="clr-namespace:ImageRecognitionApp.unit"
        xmlns:converters="clr-namespace:ImageRecognitionApp.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{Binding TitleText}" Height="720" Width="1050"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/logo/logo.ico">
    <Window.Resources>

        <converters:SubtractConverter x:Key="SubtractConverter"/>
        <converters:MultiplyConverter x:Key="MultiplyConverter"/>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0,14,0,0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="MinimizeButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#565656"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- 主背景边框 - 实现14px圆角效果 -->
        <Border Background="#3C3C3C" CornerRadius="14,14,14,14">
            <Grid>
                <!-- 毛玻璃背景层 -->
                <Border Background="#3C3C3C" Opacity="0.9" CornerRadius="18">

                </Border>
                <!-- 内容层 -->
                <Grid>
                    <!-- 自定义标题栏 - 置顶 -->
                    <Border Height="50" VerticalAlignment="Top" Panel.ZIndex="1" CornerRadius="14,14,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" HorizontalAlignment="Stretch" Background="#3C3C3C" BorderThickness="0,0,0,1" BorderBrush="#FFFFFF">
                    <Grid MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                        <!-- 毛玻璃背景层 -->
                        <!-- <Border Background="#1E1E1E" Opacity="1" CornerRadius="18,18,0,0"></Border> -->
                        <!-- 内容层 -->
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0">
                            <Image Source="pack://application:,,,/Resources/logo/logo.ico" Width="46" Height="46" Stretch="UniformToFill" VerticalAlignment="Center" Margin="0,0,2,0">
                                <Image.Clip>
                                    <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,46,46"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock Text="{Binding TitleText}" Foreground="White" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" FontFamily="Microsoft YaHei, SimHei, Arial Unicode MS"/>
                        </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                                <Button Click="MinimizeWindow" Style="{StaticResource MinimizeButtonStyle}" MouseLeftButtonDown="TitleBarButton_MouseLeftButtonDown" Margin="0,0,-1,0">—</Button>
                                <Button Click="CloseWindow" Style="{StaticResource CloseButtonStyle}" MouseLeftButtonDown="TitleBarButton_MouseLeftButtonDown" Margin="0,0,0,0">✕</Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                </Grid>
                <!-- 内容框 - 标题栏下方4px，左右边距4px -->
                <!-- Panel.ZIndex设置为2确保内容框位于标题栏之上但不会遮挡其他关键UI元素 -->
                <Border Margin="4,54,4,4"
                        CornerRadius="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="2">
                    <!-- 宽度设置为窗口宽度减去8px (左右边距各4px) -->
                    <Border.Width>
                        <MultiBinding Converter="{StaticResource SubtractConverter}">
                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Source="8"/>
                        </MultiBinding>
                    </Border.Width>
                    <!-- 高度设置为窗口高度减去58px (标题栏高度50px + 上下边距各4px) -->
                    <Border.Height>
                        <MultiBinding Converter="{StaticResource SubtractConverter}">
                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Source="58"/>
                        </MultiBinding>
                    </Border.Height>
                    <!-- 内容框内部布局 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <!-- 自定义菜单栏 -->
                        <Border Grid.Column="0"
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"
                                Background="#1E1E1E"
                                CornerRadius="10"
                                Margin="0">
                            <!-- 侧边栏内容可以在这里添加 -->

                        <!-- 设置按钮 - 水平居中，位于底部 -->
                        <Button Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                                Height="40"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Margin="0,0,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5"
                                                Width="{TemplateBinding Width}"
                                                Height="{TemplateBinding Height}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#1E1E1E"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2A2D2E"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <!-- 上边框线 - 宽度为按钮的一半，水平居中 -->
                                                <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}, Converter={StaticResource MultiplyConverter}, ConverterParameter=0.5}"
                                                        Height="2"
                                                        Background="#2A2D2E"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Top"/>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,10,0">
                                            <!-- 图标 -->
                                            <Image Source="pack://application:,,,/Resources/Icons/igoutu/setting-gear.png"
                                                   Width="32"
                                                   Height="32"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                            <!-- 文字 -->
                                            <TextBlock x:Name="SettingButtonTextBlock" Text="{Binding SettingButtonText}"
                                                       Foreground="White"
                                                       FontSize="14"
                                                       Margin="5,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        </Border>
                        <!-- 主内容区域 - 宽度为内容框的3/4-2px - 高度为内容框的高度 - 背景色#1E1E1E - 10px圆角 -->
                        <Border Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"
                                Background="#1E1E1E"
                                CornerRadius="10"
                                Margin="5,0,2,0">
                            <!-- 主内容区域内容可以在这里添加 -->
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
