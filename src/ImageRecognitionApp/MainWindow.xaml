<!-- 主窗口 - 应用程序的主界面，设置了无边框样式、透明背景和自定义标题栏 -->
<Window x:Class="ImageRecognitionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ImageRecognitionApp"
        xmlns:unit="clr-namespace:ImageRecognitionApp.unit"
        xmlns:converters="clr-namespace:ImageRecognitionApp.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{Binding TitleText}" Height="720" Width="1050"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        StateChanged="Window_StateChanged"
        Activated="Window_Activated">
    <Window.Resources>

        <!-- 减法转换器 - 用于计算值的差值，如内容框宽度和高度 -->
        <converters:SubtractConverter x:Key="SubtractConverter"/>
        <!-- 乘法转换器 - 用于计算值的乘积，如设置按钮上边框宽度 -->
        <converters:MultiplyConverter x:Key="MultiplyConverter"/>
        <!-- 标题栏按钮样式 - 定义标题栏按钮的基本外观和行为 -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- 关闭按钮样式 - 基于标题栏按钮样式，定义关闭按钮的特殊外观 -->
        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0,14,0,0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- 最小化按钮样式 - 基于标题栏按钮样式，定义最小化和隐藏到托盘按钮的外观 -->
        <Style x:Key="MinimizeButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#565656"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <!-- 主布局网格 - 包含应用程序的所有UI元素 -->
    <Grid>
        <!-- 主背景边框 - 实现14px圆角效果 -->
        <Border Background="#3C3C3C" CornerRadius="14,14,14,14">
            <!-- 内容层网格 - 包含标题栏和内容区域 -->
            <Grid>
                <!-- 毛玻璃背景层 -->
                <Border Background="#3C3C3C" Opacity="0.9" CornerRadius="18">

                </Border>
                <!-- 内容层 -->
                <Grid>
                    <!-- 自定义标题栏 - 置顶 -->
                    <Border x:Name="TitleBar" Height="50" VerticalAlignment="Top" Panel.ZIndex="1" CornerRadius="14,14,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" MouseRightButtonDown="TitleBar_MouseRightButtonDown" HorizontalAlignment="Stretch" Background="#3C3C3C">
                        <!-- 原下边框线已注释: BorderThickness="0,0,0,1" BorderBrush="#FFFFFF" -->
                    <!-- 标题栏内部网格 - 处理鼠标拖动事件 -->
                    <Grid MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                        <!-- 毛玻璃背景层 -->
                        <!-- <Border Background="#1E1E1E" Opacity="1" CornerRadius="18,18,0,0"></Border> -->
                        <!-- 内容层 -->
                        <Grid>
                            <!-- 标题栏左侧面板 - 包含logo和应用标题 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0">
                            <!-- 应用Logo - 显示应用程序图标 -->
                            <Image Source="{Binding LogoImagePath}" Width="46" Height="46" Stretch="UniformToFill" VerticalAlignment="Center" Margin="0,0,15,0">
                                <Image.Clip>
                                    <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,46,46"/>
                                </Image.Clip>
                            </Image>
                            <!-- 应用标题 - 显示应用程序标题文本 -->
                            <TextBlock Text="{Binding TitleText}" Foreground="White" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" FontFamily="Microsoft YaHei, SimHei, Arial Unicode MS"/>
                        </StackPanel>
                            <!-- 标题栏右侧面板 - 包含窗口控制按钮 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                                <!-- 下拉菜单按钮 - 点击后显示下拉菜单 -->
                                <Button x:Name="DropdownMenuButton" Style="{StaticResource MinimizeButtonStyle}" Width="33.33" Height="33.33" Margin="0,8.33,4,8.33" VerticalAlignment="Center" Click="DropdownMenuButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Image Source="{Binding DropdownMenuButtonIconPath}" Width="26.67" Height="26.67" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>

                                <!-- 下拉菜单Popup -->
                                <Popup x:Name="DropdownMenuPopup" PlacementTarget="{Binding ElementName=DropdownMenuButton}" Placement="Bottom" HorizontalOffset="-58.5" AllowsTransparency="True" StaysOpen="False">
                                    <Popup.Resources>
                                        <!-- 下拉菜单按钮样式 -->
                                        <Style x:Key="DropdownMenuItemStyle" TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="FontFamily" Value="Microsoft YaHei, SimHei, Arial Unicode MS"/>
                                            <Setter Property="Width" Value="144"/>
                                            <Setter Property="Height" Value="24"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#333333"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>

                                        <!-- 下拉菜单展开动画 -->
                                        <Storyboard x:Key="DropdownMenuAnimation">
                                            <DoubleAnimation Storyboard.TargetProperty="Height" From="0" To="100" Duration="0:0:0.3" Storyboard.TargetName="DropdownMenuBorder"/>
                                        </Storyboard>
                                    </Popup.Resources>
                                    <Border Width="150" Background="#252526" BorderBrush="#2D2D2D" BorderThickness="1" CornerRadius="10" x:Name="DropdownMenuBorder">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.Loaded">
                                                <BeginStoryboard Storyboard="{StaticResource DropdownMenuAnimation}"/>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <StackPanel Margin="3">
                                            <Button x:Name="SystemInfoButton" Style="{StaticResource DropdownMenuItemStyle}" Margin="0,5,0,2" Click="SystemInfoButton_Click" Content="系统信息" Height="36"/>
                                            <!-- 分割线 -->
                                            <Border Width="120" Height="1" Background="#323233" HorizontalAlignment="Center" Margin="0,2,0,2"/>
                                            <Button x:Name="AboutButton" Style="{StaticResource DropdownMenuItemStyle}" Margin="0,2,0,5" Click="AboutButton_Click" Content="关于" Height="36"/>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                                <!-- 分隔线 - 标题栏按钮区域的分隔线 -->
                                <Border Width="1" Height="25" Background="#535353" Margin="0,12.5,4,12.5" VerticalAlignment="Center"/>
                                <!-- 隐藏到托盘按钮 - 点击后将应用窗口隐藏到系统托盘 -->
                                <Button Click="HideToTray" Style="{StaticResource MinimizeButtonStyle}" MouseLeftButtonDown="TitleBarButton_MouseLeftButtonDown" Margin="0,0,-1,0" Loaded="HideToTrayButton_Loaded">
                                     <Image Source="{Binding HideToTrayButtonIconPath}" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                  </Button>
                                  <!-- 最小化按钮 - 点击后将窗口最小化到任务栏 -->
                                  <Button Click="MinimizeWindow" Style="{StaticResource MinimizeButtonStyle}" MouseLeftButtonDown="TitleBarButton_MouseLeftButtonDown" Margin="0,0,-1,0" Loaded="MinimizeWindowButton_Loaded">
                                     <Image Source="{Binding MinimizeWindowButtonIconPath}" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                  </Button>
                                  <!-- 关闭按钮 - 点击后关闭应用程序 -->
                                  <Button Click="CloseWindow" Style="{StaticResource CloseButtonStyle}" MouseLeftButtonDown="TitleBarButton_MouseLeftButtonDown" Margin="0,0,0,0" Loaded="CloseWindowButton_Loaded">
                                     <Image Source="{Binding CloseWindowButtonIconPath}" Width="30.67" Height="30.67" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                  </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                </Grid>
                <!-- 内容框 - 标题栏下方4px，左右边距4px -->
                <!-- Panel.ZIndex设置为2确保内容框位于标题栏之上但不会遮挡其他关键UI元素 -->
                <Border Margin="4,46,4,4"
                        CornerRadius="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="2">
                    <!-- 宽度设置为窗口宽度减去8px (左右边距各4px) -->
                    <Border.Width>
                        <MultiBinding Converter="{StaticResource SubtractConverter}">
                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Source="8"/>
                        </MultiBinding>
                    </Border.Width>
                    <!-- 高度设置为窗口高度减去58px (标题栏高度50px + 上下边距各4px) -->
                    <Border.Height>
                        <MultiBinding Converter="{StaticResource SubtractConverter}">
                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Source="58"/>
                        </MultiBinding>
                    </Border.Height>
                    <!-- 内容框内部布局 - 分为侧边栏和主内容区域 -->
                    <Grid>
                        <!-- 内容区域列定义 - 1:3比例分割侧边栏和主内容区 -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <!-- 自定义菜单栏 -->
                        <Border Grid.Column="0"
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"
                                Background="#1E1E1E"
                                CornerRadius="10"
                                Margin="0">
                            <!-- 侧边栏内容容器 -->
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <!-- 折叠按钮 -->
                                <Button x:Name="CollapseButton" Width="40" Height="40" Margin="10,5,0,5" Background="Transparent" BorderThickness="0" Loaded="CollapseButton_Loaded" Click="CollapseButton_Click" HorizontalAlignment="Left">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="5" Width="40" Height="40">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#1E1E1E"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="Tag" Value="Selected">
                                                                <Setter Property="Background" Value="#37373D"/>
                                                            </Trigger>
                                                            <MultiTrigger>
                                                                <MultiTrigger.Conditions>
                                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                                    <Condition Property="Tag" Value="{x:Null}"/>
                                                                </MultiTrigger.Conditions>
                                                                <Setter Property="Background" Value="#2A2D2E"/>
                                                            </MultiTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <!-- 图标 -->
                                                        <Image Source="{Binding CollapseButtonIconPath}" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- 顶部按钮列表 -->
                                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0">
                            <!-- 启动按钮 -->
                            <Button x:Name="LaunchButton" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}" Click="SidebarButton_Click" 
                                    Height="60" 
                                    HorizontalAlignment="Stretch" 
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Margin="0,0,0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="5" 
                                                Width="{TemplateBinding Width}" 
                                                Height="{TemplateBinding Height}">
                                            <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#1E1E1E"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="Tag" Value="Selected">
                                                                    <Setter Property="Background" Value="#37373D"/>
                                                                </Trigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                                        <Condition Property="Tag" Value="{x:Null}"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter Property="Background" Value="#2A2D2E"/>
                                                                </MultiTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                            <Grid>
                                                <!-- 上边框线已移除 -->
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Left" 
                                                            VerticalAlignment="Center" 
                                                            Margin="12,0,10,0">
                                                    <!-- 图标 -->
                                                    <Image Source="{Binding LaunchButtonIconPath}" 
                                                           Width="32" 
                                                           Height="32" 
                                                           HorizontalAlignment="Left" 
                                                           VerticalAlignment="Center"/>
                                                    <!-- 文字 -->
                                                    <TextBlock Text="{Binding LaunchButtonText}"
                                                               FontSize="14"
                                                               Margin="15,0,0,0"
                                                               HorizontalAlignment="Left"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Tag, ElementName=border}" Value="Selected">
                                                                        <Setter Property="Foreground" Value="#007ACC"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- 视觉脚本按钮 -->
                            <Button x:Name="VisualScriptButton" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}" Click="SidebarButton_Click" 
                                    Height="60" 
                                    HorizontalAlignment="Stretch" 
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Margin="0,0,0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="5" 
                                                Width="{TemplateBinding Width}" 
                                                Height="{TemplateBinding Height}">
                                            <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#1E1E1E"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="Tag" Value="Selected">
                                                                    <Setter Property="Background" Value="#37373D"/>
                                                                </Trigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                                        <Condition Property="Tag" Value="{x:Null}"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter Property="Background" Value="#2A2D2E"/>
                                                                </MultiTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                            <Grid>
                                                <!-- 上边框线已移除 -->
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Left" 
                                                            VerticalAlignment="Center" 
                                                            Margin="12,0,10,0">
                                                    <!-- 图标 -->
                                                    <Image Source="{Binding VisualScriptButtonIconPath}" 
                                                           Width="32" 
                                                           Height="32" 
                                                           HorizontalAlignment="Left" 
                                                           VerticalAlignment="Center"/>
                                                    <!-- 文字 -->
                                                    <TextBlock Text="{Binding VisualScriptButtonText}"
                                                               FontSize="14"
                                                               Margin="15,0,0,0"
                                                               HorizontalAlignment="Left"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Tag, ElementName=border}" Value="Selected">
                                                                        <Setter Property="Foreground" Value="#007ACC"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- 辅助操控按钮 -->
                            <Button x:Name="AuxiliaryOperationButton" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}" Click="SidebarButton_Click" 
                                    Height="60" 
                                    HorizontalAlignment="Stretch" 
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Margin="0,0,0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="5" 
                                                Width="{TemplateBinding Width}" 
                                                Height="{TemplateBinding Height}">
                                            <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#1E1E1E"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="Tag" Value="Selected">
                                                                    <Setter Property="Background" Value="#37373D"/>
                                                                </Trigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                                        <Condition Property="Tag" Value="{x:Null}"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter Property="Background" Value="#2A2D2E"/>
                                                                </MultiTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                            <Grid>
                                                <!-- 上边框线已移除 -->
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Left" 
                                                            VerticalAlignment="Center" 
                                                            Margin="12,0,10,0">
                                                    <!-- 图标 -->
                                                    <Image Source="{Binding AuxiliaryOperationButtonIconPath}" 
                                                           Width="32" 
                                                           Height="32" 
                                                           HorizontalAlignment="Left" 
                                                           VerticalAlignment="Center"/>
                                                    <!-- 文字 -->
                                                    <TextBlock Text="{Binding AuxiliaryOperationButtonText}"
                                                               FontSize="14"
                                                               Margin="15,0,0,0"
                                                               HorizontalAlignment="Left"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Tag, ElementName=border}" Value="Selected">
                                                                        <Setter Property="Foreground" Value="#007ACC"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- 屏幕录制按钮 -->
                            <Button x:Name="ScreenRecordingButton" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}" Click="SidebarButton_Click" 
                                    Height="60" 
                                    HorizontalAlignment="Stretch" 
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Margin="0,0,0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="5" 
                                                Width="{TemplateBinding Width}" 
                                                Height="{TemplateBinding Height}">
                                            <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#1E1E1E"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="Tag" Value="Selected">
                                                                    <Setter Property="Background" Value="#37373D"/>
                                                                </Trigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                                        <Condition Property="Tag" Value="{x:Null}"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter Property="Background" Value="#2A2D2E"/>
                                                                </MultiTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                            <Grid>
                                                <!-- 上边框线已移除 -->
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Left" 
                                                            VerticalAlignment="Center" 
                                                            Margin="10,0,10,0">
                                                    <!-- 图标 -->
                                                    <Image Source="{Binding ScreenRecordingButtonIconPath}" 
                                                           Width="32" 
                                                           Height="32" 
                                                           HorizontalAlignment="Left" 
                                                           VerticalAlignment="Center"/>
                                                    <!-- 文字 -->
                                                    <TextBlock Text="{Binding ScreenRecordingButtonText}"
                                                               FontSize="14"
                                                               Margin="15,0,0,0"
                                                               HorizontalAlignment="Left"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Tag, ElementName=border}" Value="Selected">
                                                                        <Setter Property="Foreground" Value="#007ACC"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- 快捷键按钮 -->
                            <Button x:Name="ShortcutKeysButton" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}" Click="SidebarButton_Click" 
                                    Height="60" 
                                    HorizontalAlignment="Stretch" 
                                    Background="Transparent" 
                                    BorderThickness="0" 
                                    Margin="0,0,0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="5" 
                                                Width="{TemplateBinding Width}" 
                                                Height="{TemplateBinding Height}">
                                            <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#1E1E1E"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="Tag" Value="Selected">
                                                                    <Setter Property="Background" Value="#37373D"/>
                                                                </Trigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsMouseOver" Value="True"/>
